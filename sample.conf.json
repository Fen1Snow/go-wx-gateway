{
      "listen-host": "",
      "listen-port": 7080,
      "services": [
         {
             "name": "echo_server",
             "workerNum": 5,
             "timeout": 0,
             "wx-params": {
                 "token": "your_token_at_weixin_admin",
                 "app-id": "your_appId_at_weixin_admin",
                 "app-secret": "your_appSecret_at_weixin_admin",
                 "aes-key": "let_this_empty_or_null_if_plain_text_transfer"
             },
             "listen-endpoints": {
                 "service-path": "/wx",
                 "redirect-path": "/redirect"
             },
             "msg-proxy-pass": "http://yourhost.or.ip.here/empty_is_ok",
			 "menu-redirect-url": "http://yourhost.io.ip.here/path/to/redirect",
             "menu-handler": "http://yourhost.or.ip/handler/path/or_empty_string, deprecated"
         }
      ],
	  "token-cache-dir": "/path/to/cache_dir",
	  "common-endpoints": {
          "health-check": "/health",
          "wx-qr": "/qr",
		  "wx-user": "/user"
	  },
	  "dont-append-userinfo": false
}
